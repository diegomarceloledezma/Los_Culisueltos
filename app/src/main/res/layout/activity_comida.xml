<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marino"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ComidaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_comida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/naranja">

        <Button
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/menu_icon"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/user_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_desayuno"
        android:layout_width="match_parent"
        android:layout_height=  "120dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:src="@drawable/fondo_desayuno"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/texto_menu_desayuno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/DESAYUNO"
            android:fontFamily="@font/fuente3"
            android:textSize="36dp"
            android:textColor="@color/black"
            android:gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_almuerzo"
        android:layout_width="match_parent"
        android:layout_height=  "120dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/fondo_almuerzo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/texto_menu_almuerzo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ALMUERZO"
            android:textSize="36dp"
            android:fontFamily="@font/fuente3"
            android:textColor="@color/black"
            android:gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_cena"
        android:layout_width="match_parent"
        android:layout_height=  "120dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:src="@drawable/fondo_cena"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/texto_menu_cena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/CENA"
            android:textColor="@color/black"
            android:fontFamily="@font/fuente3"
            android:textSize="40dp"
            android:gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_calculadora_calorica"
        android:layout_width="match_parent"
        android:layout_height=  "120dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:src="@drawable/fondo_calculadora_calorica"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/texto_menu_calculadora_calorica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/CALCULADORA_CALORICA"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:fontFamily="@font/fuente3"
            android:gravity="center"
            android:drawable="@drawable/fondo_desayuno">
        </TextView>
    </androidx.cardview.widget.CardView>
</LinearLayout>