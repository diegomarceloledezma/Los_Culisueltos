<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marino"
    android:orientation="vertical"
    android:gravity="center|top">



    <TextView
        android:padding="8dp"
        android:id="@+id/text_view_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/image_view_gif"
        android:layout_width="200dp"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/text_view_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_ejercicio"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <TextView
        android:padding="8dp"
        android:id="@+id/text_view_explicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/gym_logo"
        />






</LinearLayout>